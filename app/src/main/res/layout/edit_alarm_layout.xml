<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/saveAlarm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:stateListAnimator="@drawable/fab_raise"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/alarmTime"
        android:background="@drawable/ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:text="12:00pm"
        android:textColor="@color/colorText"
        android:textSize="72sp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/monday"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/oval_day_on"
            android:clickable="true"
            android:elevation="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:stateListAnimator="@drawable/fab_raise"
            android:text="@string/monday"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/oval_day_off"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:stateListAnimator="@drawable/fab_raise"
            android:text="@string/tuesday"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/oval_day_off"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:stateListAnimator="@drawable/fab_raise"
            android:text="@string/wednesday"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/thursday"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/oval_day_off"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:stateListAnimator="@drawable/fab_raise"
            android:text="@string/thursday"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/friday"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/oval_day_off"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:stateListAnimator="@drawable/fab_raise"
            android:text="@string/friday"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/saturday"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/oval_day_off"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:stateListAnimator="@drawable/fab_raise"
            android:text="@string/saturday"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sunday"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/oval_day_off"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:stateListAnimator="@drawable/fab_raise"
            android:text="@string/sunday"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/repeat"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmTime" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/alarmNameSubText"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="@string/alarmNameHint"
        android:inputType="text"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorTextSecondary"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />


</android.support.constraint.ConstraintLayout>
