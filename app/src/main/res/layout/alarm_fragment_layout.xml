<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.mycompany.clockplus.AlarmFragment">


    <!-- TODO: Update blank fragment layout -->


    <ListView
        android:id="@+id/listview_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></ListView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/floatingActionMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDayOff"
        android:gravity="top"
        android:visibility="visible"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/alarm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            fab:fabSize="mini"
            fab:srcCompat="@drawable/ic_alarm_add_white_24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionMenu"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="27dp"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            fab:srcCompat="@drawable/fab_plus" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/calendar_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            fab:fabSize="mini"
            fab:srcCompat="@drawable/ic_date_range_white_24dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/alarm_button"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:elevation="6dp"
            android:padding="4dp"
            android:text="@string/calendar_alarm"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="33dp"
            tools:layout_editor_absoluteY="337dp"
            app:layout_constraintRight_toLeftOf="@+id/calendar_alarm"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.529" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:elevation="6dp"
            android:padding="4dp"
            android:text="@string/createalarm"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="43dp"
            tools:layout_editor_absoluteY="392dp"
            app:layout_constraintRight_toLeftOf="@+id/alarm_button"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>


</FrameLayout>
