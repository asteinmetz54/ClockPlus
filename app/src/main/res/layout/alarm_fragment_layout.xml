<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.mycompany.clockplus.AlarmFragment">


    <!-- TODO: Update blank fragment layout -->


    <ListView
        android:id="@+id/listview_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></ListView>

    <RelativeLayout
        android:id="@+id/floatingActionMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDayOff"
        android:gravity="top"
        android:visibility="visible">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/floatingActionButton2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            fab:fabSize="mini"
            fab:srcCompat="@drawable/ic_alarm_add_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:fabSize="normal"
            fab:srcCompat="@drawable/fab_plus" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/floatingActionButton"
            android:layout_alignStart="@+id/floatingActionButton"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            fab:fabSize="mini"
            fab:srcCompat="@drawable/ic_date_range_white_24dp" />

        <TextView
            android:id="@+id/alarm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignTop="@+id/floatingActionButton3"
            android:layout_marginTop="11dp"
            android:background="@drawable/round_corners"
            android:elevation="6dp"
            android:padding="4dp"
            android:text="@string/calendar_alarm"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/floatingActionButton3"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="11dp"
            android:layout_toStartOf="@+id/floatingActionButton2"
            android:background="@drawable/round_corners"
            android:elevation="6dp"
            android:padding="4dp"
            android:text="@string/createalarm"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>


</FrameLayout>
